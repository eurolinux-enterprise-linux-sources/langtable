       <name><languageId>sr</languageId><trName>филипински</trName></name>
       <name><languageId>sr_Latn</languageId><trName>filipinski</trName></name>
@@ -6292,7 +6291,6 @@
       <name><languageId>tg</languageId><trName>Филиппинӣ</trName></name>
